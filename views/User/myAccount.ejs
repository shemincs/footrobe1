	<script>
		function shareViaWhatsApp() {
			const referralCodeSelect = document.getElementById('selectReferral');
			const selectedReferralCode = referralCodeSelect.value;

			const message = `Use my referral code "${selectedReferralCode}" to sign up on footRobe and get â‚¹100 on your wallet!`;
			const whatsappURL = `https://wa.me/?text=${encodeURIComponent(message)}`;
			window.open(whatsappURL, "_blank");
		}
	</script>
	<Script>


		const modalButton = document.querySelectorAll('.openModalButton');
		const modal = document.getElementById('editAddressModal');
		const closeButton = document.getElementById('closeModal');

		modalButton.forEach(button => {
			button.addEventListener('click', function () {
				const addressId = button.getAttribute("data-address"); // Fix the attribute name

				fetch(`/addressData?addressId=${addressId}`, { // Fix the fetch URL syntax with backticks
					method: "GET"
				})
					.then(response => response.json())
					.then(data => {
						const address = data.addresses[0]; // Fix the property name to match your schema
						document.getElementById('city').value = address.City; // Match the property case with your schema
						document.getElementById('country').value = address.country; // Adjust based on your schema
						document.getElementById('pincode').value = address.pincode; // Adjust based on your schema
						document.getElementById('mobile').value = address.mobile; // Adjust based on your schema
						document.getElementById('district').value = address.district; // Adjust based on your schema
						document.getElementById('fname').value = address.Firstname; // Adjust based on your schema
						document.getElementById('ids').value = address._id; // Adjust based on your schema

						modal.style.display = "block";
					})
					.catch(error => {
						console.log(error.message);
					});
			});
		});

		closeButton.addEventListener('click', function (e) {
			e.preventDefault();
			modal.style.display = 'none';
		});


